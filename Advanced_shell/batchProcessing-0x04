#!/bin/bash

OUTPUT_DIR="pokemon_data"
mkdir -p "$OUTPUT_DIR"

pokemon_list=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

fetch_pokemon() {
    local name="$1"
    local name_lower=$(echo "$name" | awk '{print tolower($0)}')
    local output_file="$OUTPUT_DIR/${name_lower}.json"
    local api_url="https://pokeapi.co/api/v2/pokemon/${name_lower}"

    echo "Fetching data for $name..."

    if curl -s -f "$api_url" -o "$output_file"; then
        echo "Saved data to $output_file ✅"
    else
        echo "❌ Failed to fetch data for $name" >> errors.txt
    fi
}

export -f fetch_pokemon
export OUTPUT_DIR

# Launch all fetches in background
for p in "${pokemon_list[@]}"; do
    fetch_pokemon "$p" &
done

# Wait for all background jobs to finish (no kill used)
wait

echo "All fetches completed."
