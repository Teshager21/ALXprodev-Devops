#!/bin/bash

# Directory containing JSON files
INPUT_DIR="pokemon_data"
REPORT_FILE="pokemon_report.csv"

# Header for the CSV file
echo "Name,Height (m),Weight (kg)" > "$REPORT_FILE"

# Loop through each JSON file and extract name, height, and weight
for file in "$INPUT_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height_dm=$(jq -r '.height' "$file")
    weight_hg=$(jq -r '.weight' "$file")

    # Convert to meters and kilograms
    height_m=$(awk "BEGIN { printf \"%.1f\", $height_dm / 10 }")
    weight_kg=$(awk "BEGIN { printf \"%.1f\", $weight_hg / 10 }")

    echo "$name,$height_m,$weight_kg" >> "$REPORT_FILE"
done

# Output success message
echo "CSV Report generated at: $REPORT_FILE"
echo ""

# Display the contents of the report
cat "$REPORT_FILE"

echo ""

# Calculate averages using awk
awk -F',' '
    NR > 1 {
        total_height += $2;
        total_weight += $3;
        count += 1;
    }
    END {
        avg_height = total_height / count;
        avg_weight = total_weight / count;
        printf "\nAverage Height: %.2f m\n", avg_height;
        printf "Average Weight: %.2f kg\n", avg_weight;
    }
' "$REPORT_FILE"
